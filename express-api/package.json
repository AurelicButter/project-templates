  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-router": "^0.1.15"
  },
  "lint-staged": {
		"*.{js,json,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix --quiet"
		]
	},
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
